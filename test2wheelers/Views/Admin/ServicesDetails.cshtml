@model _2whealers.Models.Services
@{
    ViewBag.Title = "Services Delivery Challan";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
<link href="~/css/pre-sale.css" rel="stylesheet" />


<div class="challan-wrapper">
    <div class="text-center mb-3">
        <img src="~/AdminAssets/dist/img/logo1.png" alt="Bike Nation Logo" class="challan-logo" />
        <h2 class="company-name">Bike Nation Motors</h2>
        <p class="company-address"> 543, Nimri Colony Ashok Vihar , North-west Delhi-52 <br /> Mobile No - 7701964750, 8826035547 </p>
        <h3 class="challan-title">Delivery Challan</h3>
    </div>

    <div class="row mb-3">
        <div class="col-6">
            <h5>Customer Details</h5>
            <p><strong>Name:</strong> Rahul Sharma</p>
            <p><strong>Address:</strong> 123, Green Park, Delhi - 110016</p>
            <p><strong>Mobile:</strong> 9876543210</p>
        </div> 
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="width: 60px;">S.No</th>
                <th>Job Done</th>
                <th style="width: 100px;">Status</th>
            </tr>
        </thead>
        <tbody>
            @{
                int sno = 1;
            }

            @if (Model.RegularService)
            {
                <tr>
                    <td>@(sno++)</td>
                    <td>Regular Service</td>
                    <td>✔</td>
                </tr>
            }
            @if (Model.WashingPolishing)
            {
                <tr>
                    <td>@(sno++)</td>
                    <td>Washing & Polishing</td>
                    <td>✔</td>
                </tr>
            }
            @if (Model.Brake)
            {
                <tr>
                    <td>@(sno++)</td>
                    <td>Brake</td>
                    <td>✔</td>
                </tr>
            }
            @if (Model.SparkPlug)
            {
                <tr>
                    <td>@(sno++)</td>
                    <td>Spark Plug Check</td>
                    <td>✔</td>
                </tr>
            }
            @if (Model.ChainServices)
            {
                <tr>
                    <td>@(sno++)</td>
                    <td>Chain Services</td>
                    <td>✔</td>
                </tr>
            }
            @if (Model.Engine)
            {
                <tr>
                    <td>@(sno++)</td>
                    <td>Engine Check</td>
                    <td>✔</td>
                </tr>
            }
            @if (Model.ElectricalIssues)
            {
                <tr>
                    <td>@(sno++)</td>
                    <td>Electrical Issues</td>
                    <td>✔</td>
                </tr>
            }
            @if (Model.Suspension)
            {
                <tr>
                    <td>@(sno++)</td>
                    <td>Suspension Check</td>
                    <td>✔</td>
                </tr>
            }
            @if (Model.Clutch)
            {
                <tr>
                    <td>@(sno++)</td>
                    <td>Clutch Check</td>
                    <td>✔</td>
                </tr>
            }
            @if (Model.Accident)
            {
                <tr>
                    <td>@(sno++)</td>
                    <td>Accident Repair</td>
                    <td>✔</td>
                </tr>
            }
            @if (Model.OilChange)
            {
                <tr>
                    <td>@(sno++)</td>
                    <td>Oil Change</td>
                    <td>✔</td>
                </tr>
            }
            @if (Model.RunningRepair)
            {
                <tr>
                    <td>@(sno++)</td>
                    <td>Running Repair</td>
                    <td>✔</td>
                </tr>
            }
            @if (Model.Gear)
            {
                <tr>
                    <td>@(sno++)</td>
                    <td>Gear Check</td>
                    <td>✔</td>
                </tr>
            }
            @if (Model.PaintRepair)
            {
                <tr>
                    <td>@(sno++)</td>
                    <td>Paint Repair</td>
                    <td>✔</td>
                </tr>
            }
            @if (Model.Accessories)
            {
                <tr>
                    <td>@(sno++)</td>
                    <td>Accessories Fitment</td>
                    <td>✔</td>
                </tr>
            }
            @if (Model.GeneralCheckup)
            {
                <tr>
                    <td>@(sno++)</td>
                    <td>General Checkup</td>
                    <td>✔</td>
                </tr>
            }
            <tr style="font-weight:bold; background-color:#f2f2f2;">
                <td colspan="2" class="text-right">Total Amount</td>
                <td>
                    @(Model.Amount.HasValue ? Model.Amount.Value.ToString("C") : "₹0.00")
                </td>

            </tr>
        </tbody>
    </table>



    <div class="signature-row">
        <div class="signature-left">
            <div class="signature-box"></div>
            <p>(Customer Signature)</p>
        </div>
        <div class="signature-right">
            <div class="signature-box"></div>
            <p>(Authorized Signature)</p>
        </div>
    </div>

    <div class="text-center no-print">
        <button onclick="window.print()" class="print-btn">
            <i class="bi bi-printer"></i> Print
        </button>
    </div>
</div>

@section Scripts {
  
}
