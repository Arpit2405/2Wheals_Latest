@model _2whealers.Models.Services
@{
    ViewBag.Title = "Services Delivery Challan";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
<link href="~/css/pre-sale.css" rel="stylesheet" />


<div class="challan-wrapper">
    <div class="text-center mb-3">
        <img src="~/AdminAssets/dist/img/logo1.png" alt="Bike Nation Logo" class="challan-logo" />
        <h2 class="company-name">Bike Nation Motors</h2>
        <p class="company-address"> 543, Nimri Colony Ashok Vihar , North-west Delhi-52 <br /> Mobile No - 7701964750, 8826035547 </p>
        <h3 class="challan-title">Delivery Challan</h3>
    </div>

    <div class="row mb-3">
        <div class="col-6">
            <h5>Customer Details</h5>
            <p><strong>Name:</strong> Rahul Sharma</p>
            <p><strong>Address:</strong> 123, Green Park, Delhi - 110016</p>
            <p><strong>Mobile:</strong> 9876543210</p>
        </div> 
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="width: 60px;">S.No</th>
                <th>Job Done</th>
                <th style="width: 100px;">Status</th>
            </tr>
        </thead>
        <tbody>
            @{
                int sno = 1;
            }
            @if (Model.RegularService)
            {
                <tr>
                    <td>@(sno++)</td>
                    <td>Regular Service</td>
                    <td>✔</td>
                </tr>
            }
            @if (Model.WashingPolishing)
            {
                <tr>
                    <td>@(sno++)</td>
                    <td>Washing & Polishing</td>
                    <td>✔</td>
                </tr>
            }
            <!-- baki jobs same -->
        </tbody>
    </table>



    <div class="signature-row">
        <div class="signature-left">
            <div class="signature-box"></div>
            <p>(Customer Signature)</p>
        </div>
        <div class="signature-right">
            <div class="signature-box"></div>
            <p>(Authorized Signature)</p>
        </div>
    </div>

    <div class="text-center no-print">
        <button onclick="window.print()" class="print-btn">
            <i class="bi bi-printer"></i> Print
        </button>
    </div>
</div>

@section Scripts {
  
}
