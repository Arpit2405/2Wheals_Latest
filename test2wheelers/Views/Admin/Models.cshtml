@model List<_2whealers.Models.BikeModels>

@{
    ViewBag.Title = "Models";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

<ol class="breadcrumb mb-0">
    <li class="breadcrumb-item">
        <a href="/"><i class="fas fa-home"></i> Home</a>
    </li>
    <li class="breadcrumb-item active"> Models </li>
</ol>

<div class="row">
    <div class="col-12">
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h2 class="mb-4">📦 Models</h2>

                <div class="mb-3 text-right">
                    <button id="openAddModelModal" class="btn btn-success btn-sm px-3">
                        <i class="fa fa-plus"></i> Add Model
                    </button>
                </div>

                <!-- Add Model Modal -->
                <div class="modal fade" id="addModelModal" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content shadow-lg rounded-lg">
                            <div class="modal-header bg-success text-white">
                                <h5 class="modal-title">Add Model</h5>
                                <button type="button" class="close text-white" data-dismiss="modal">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body" id="addModelModalBody"></div>
                        </div>
                    </div>
                </div>

                <!-- Edit Model Modal -->
                <div class="modal fade" id="editModelsModal" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content shadow-lg rounded-lg">
                            <div class="modal-header bg-primary text-white">
                                <h5 class="modal-title">Edit Model</h5>
                                <button type="button" class="close text-white" data-dismiss="modal">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body" id="editModelsModalBody"></div>
                        </div>
                    </div>
                </div>

                <div class="table-responsive">
                    <table id="ModelsTable" class="table table-striped table-hover table-bordered align-middle shadow-sm rounded overflow-hidden">
                        <thead style="background: linear-gradient(90deg, #6c63ff, #4facfe); color: #fff;">
                            <tr>
                                <th style="width:60px;" class="text-center">SNo.</th>
                                <th>Brand Name</th>
                                <th>Models Name</th>
                                <th>Created Date</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int row = 1;
                            }
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model.OrderByDescending(x => x.Id))
                                {
                                    <tr>
                                        <td class="text-center fw-bold">@row</td>
                                        <td class="fw-semibold">@item.BrandName</td>
                                        <td class="fw-semibold">@item.ModelName</td>
                                        <td class="text-muted">@item.CreatedDate.ToString("dd-MMM-yyyy")</td>
                                        <td class="text-center">
                                            <button type="button"
                                                    class="btn btn-sm btn-gradient editModelsBtn"
                                                    data-id="@item.Id">
                                                <i class="fa fa-edit"></i> Edit
                                            </button>
                                            <a href="javascript:void(0);"
                                               class="btn btn-sm btn-danger deleteBtn" data-id="@item.Id"
                                               data-url="@Url.Action("DeleteModels", "Admin", new { id = item.Id })">
                                                <i class="fa fa-trash"></i> Delete
                                            </a>
                                        </td>
                                    </tr>
                                    row++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-4">
                                        🚫 No Models found
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <style>
                    .btn-gradient {
                        background: linear-gradient(45deg, #6c63ff, #4facfe);
                        color: #fff;
                        border: none;
                    }

                        .btn-gradient:hover {
                            background: linear-gradient(45deg, #4facfe, #6c63ff);
                            color: #fff;
                        }

                    .table-striped tbody tr:nth-of-type(odd) {
                        background-color: #f9f9ff;
                    }

                    .table-hover tbody tr:hover {
                        background-color: #eef2ff;
                        transition: 0.3s;
                    }
                </style>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            toastr.options = { "positionClass": "toast-bottom-right" };

        @if (TempData["Success"] != null)
        {
            <text>toastr.success("@TempData["Success"]");</text>
        }
        @if (TempData["Error"] != null)
        {
            <text>toastr.error("@TempData["Error"]");</text>
        }
        });

                $(document).ready(function () {
                    $('#ModelsTable').DataTable({
                        responsive: true,
                        lengthChange: true,
                        autoWidth: false,
                        buttons: ["copy", "csv", "excel", "pdf"]
                    }).buttons().container().appendTo('#ModelsTable_wrapper .col-md-6:eq(0)');
                });
            // Add Model Modal
            $("#openAddModelModal").on("click", function () {
                $.get("/Admin/AddModelPartial", function (html) {
                    $("#addModelModalBody").html(html);
                    $.validator.unobtrusive.parse("#addModelModalBody");
                    $("#addModelModal").modal("show");
                });
            });

            // Edit Model Modal
            $(document).on("click", ".editModelsBtn", function () {
                var id = $(this).data("id");
                $.get("/Admin/EditModels", { id: id }, function (html) {
                    $("#editModelsModalBody").html(html);
                    $.validator.unobtrusive.parse("#editModelsModalBody");
                    $("#editModelsModal").modal("show");
                });
            });

            // Delete confirmation
            $(document).on("click", ".deleteBtn", function () {
                var url = $(this).data("url");
                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won’t be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#e3342f',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Yes, delete it!',
                    cancelButtonText: 'Cancel'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = url;
                    }
                });
                });
    </script>
}
