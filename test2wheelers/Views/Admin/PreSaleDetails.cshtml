@model _2whealers.Models.PurchaseViewModel
@{
    ViewBag.Title = "PreSaleDetails";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
<link href="~/css/pre-sale.css" rel="stylesheet" />



<div class="challan-wrapper">
    <div class="text-center mb-3">
        <img src="/Uploads/regions/@Model.RegionLogo" alt="Bike Nation Logo" class="challan-logo" />
        <h2 class="company-name">@Model.RegionName</h2>
        <p class="company-address"> @Model.AddressLine1 @Model.AddressLine2 <br /> Mobile No - @Model.MobileNo </p>
        <h3 class="challan-title">Purchase Challan</h3>
    </div>

    <table class="table challan-table">
        <tbody>
            <tr>
                <th>Order ID</th>
                <td>#@Model.Id</td>
                <th>Order Date</th>
                <td>@(Model.dateofsale != null ? Model.dateofsale.Value.ToString("dd-MMM-yyyy") : "-")</td>
            </tr>
            <tr>
                <th>Customer Name</th>
                <td>@Model.Name</td>
                <th>Phone</th>
                <td><a href="tel:@Model.MobileNo">@Model.MobileNo</a></td>
            </tr>
            <tr>
                <th>Address</th>
                <td colspan="3">@Model.Address1</td>
            </tr>
            <tr>
                <th>Vehicle Name</th>
                <td>@Model.ModelName</td>
                <th>Vehicle No</th>
                <td>@Model.RegNo</td>
            </tr>
            <tr>
                <th>Chassis No</th>
                <td>@Model.ChassisNo</td>
                <th>Engine No</th>
                <td>@Model.EngineNo</td>
            </tr>
            <tr>
                <th>Cash Amount</th>
                <td colspan="3" class="fw-bold text-success">Rs. @Model.CashAmount.ToString("N0") /-</td>
            </tr>
        </tbody>
    </table>

    <div class="disclaimer">
        <h6 class="fw-bold text-danger">Disclaimer</h6>
        <p>
            I hereby <strong>@Model.Name</strong> confirm that all the details regarding my two-wheeler are true and mine.
            If any details are hidden like any previous unpaid challan or record, I am responsible for transfer of the vehicle/authority.
            If my signature is different at the time of transfer, it is my responsibility to clear the issue regarding the vehicle.
            In any case of mis-happening, <strong>Bike Nation</strong> is not responsible for the authority.
        </p>
    </div>

    <div class="signature-row">
        <div class="signature-left">
            <div class="signature-box"></div>
            <p>(Customer Signature)</p>
        </div>
        <div class="signature-right">
            <div class="signature-box"></div>
            <p>(Authorized Signature)</p>
        </div>
    </div>

    <div class="text-center no-print">
        <button onclick="window.print()" class="print-btn">
            <i class="bi bi-printer"></i> Print
        </button>
    </div>
</div>
