@model _2whealers.Models.Receipts
@using _2whealers.Models

@{
    ViewBag.Title = "Delivery Receipt";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
<link href="~/css/receiptsstyle.css" rel="stylesheet" />

<div class="receipt-container">
    <!-- Header -->
    <div class="receipt-header text-center">
        <img src="~/AdminAssets/dist/img/logo1.png" alt="Bike Nation Logo" class="logo" />
        <h2 class="company-name">BIKE NATION MOTORS</h2>

        <p class="company-address"> 543, Nimri Colony Ashok Vihar , North-west Delhi-52 <br /> Mobile No - 7701964750, 8826035547 </p>

        <h4 class="receipt-title">RECEIPT</h4>
    </div>

    <!-- Customer Info Table -->
    <table class="receipt-info-table">
        <tbody>
            <tr>
                <th>Receipt No:</th>
                <td>BNM-SMYAUG2025-@Model.Id.ToString("D3")</td>
                <th>Date:</th>
                <td>@Model.ReceiptDate?.ToString("dd-MM-yyyy")</td>
            </tr>
            <tr>
                <th>Customer Name:</th>
                <td>@Model.CustomerName</td>
                <th>Mobile:</th>
                <td>@Model.MobileNo</td>
            </tr>
        </tbody>
    </table>

    <!-- Payment Table -->
    <table class="receipt-table">
        <thead>
            <tr>
                <th>Model Name</th>
                <th>Amount (₹)</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.ModelName</td>
                <td>
                    ₹@Model.Amount.ToString("F2") 
                </td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td style="text-align:right;"><strong>Total Paid:</strong></td>
                <td>
                    <strong>₹@Model.Amount.ToString("F2")</strong>
                    <br />
                    <small>(@NumberToWordsConverter.ConvertAmountToWords(Model.Amount))</small>
                </td>
            </tr>
        </tfoot>
    </table>

    <!-- Footer -->
    <div class="receipt-footer text-center">
        <p>This is a computer-generated receipt and does not require a signature.</p>
        <p>Thank you for your business!</p>
    </div>

    <div class="text-center no-print">
        <button onclick="window.print()" class="print-btn">
            <i class="bi bi-printer"></i> Print
        </button>
    </div>
</div>
