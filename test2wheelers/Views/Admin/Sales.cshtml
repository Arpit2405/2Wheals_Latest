@model List<_2whealers.Models.UserTransactionViewModel>
@{
    ViewBag.Title = "Sales";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

<ol class="breadcrumb mb-0">
    <li class="breadcrumb-item">
        <a href="/"><i class="fas fa-home"></i> Home</a>
    </li>
    <li class="breadcrumb-item active"> Sales </li>
</ol>

<div class="row gx-4">
    <div class="col-12">
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h2 class="mb-4">Sales</h2>

                <div class="mb-3 text-right">
                    <a href="@Url.Action("AddSales", "Admin")" class="btn btn-success">
                        + Add Sales
                    </a>
                </div>


                <div class="table-responsive">
                    <table id="PreSalesTable" class="table table-striped table-hover table-bordered align-middle shadow-sm rounded overflow-hidden">
                        <thead style="background: linear-gradient(90deg, #6c63ff, #4facfe); color: #fff;">
                            <tr>
                                <th style="width:60px;" class="text-center">SNo.</th>
                                <th>Owner</th>
                                <th>vehicle</th>
                                <th>Date of Sale</th>
                                <th>Down Payment</th>
                                <th>EMI Amount</th>
                                <th>Date Of Service Reminder</th> 
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int rowNumber = 1;
                            }
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center">@rowNumber</td>
                                        <td class="text-center">
                                            @item.Transaction.Name <br />
                                            <small>@item.Transaction.MobileNo</small>
                                        </td>
                                        <td class="text-center">@item.Transaction.ModelName</td>
                                        <td class="text-center">@Convert.ToDateTime(@item.Transaction.dateofsale).ToString("dd-MM-yyyy")</td>
                                        <td class="text-center">@item.Transaction.Downpayment</td>
                                        <td class="text-center">@item.Transaction.CashAmount</td>
                                        <td class="text-center">@Convert.ToDateTime(@item.Transaction.DateOfSaleReminder).ToString("dd-MM-yyyy")</td>
                                   
                                        <td class="text-center">
                                            <a href="@Url.Action("SaleDetails", "Admin", new { id = item.Transaction.Id })" class="btn btn-sm btn-primary">    <i class="fas fa-eye"></i></a>
                                        </td>
                                    </tr>
                                    rowNumber++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="text-center text-muted py-4">
                                        🚫 No Records found
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>

                </div>
                <style>
                    /* Gradient button */
                    .btn-gradient {
                        background: linear-gradient(45deg, #6c63ff, #4facfe);
                        color: #fff;
                        border: none;
                    }

                        .btn-gradient:hover {
                            background: linear-gradient(45deg, #4facfe, #6c63ff);
                            color: #fff;
                        }

                    /* Table striping */
                    .table-striped tbody tr:nth-of-type(odd) {
                        background-color: #f9f9ff;
                    }

                    /* Hover effect */
                    .table-hover tbody tr:hover {
                        background-color: #eef2ff;
                        transition: 0.3s;
                    }
                </style>
            </div>
        </div>
    </div>
</div>

<script src="/Scripts/jquery-3.7.0.min.js"></script>
@section Scripts {
    <script>
        $(function () {
            toastr.options = {
                "positionClass": "toast-bottom-right"
            }
            @if (TempData["Success"] != null)
            {
                <text>toastr.success("@TempData["Success"]");</text>
            }

            @if (TempData["Error"] != null)
            {
                <text>toastr.error("@TempData["Error"]");</text>
            }

        });
    </script>
}
<script>
    $(document).ready(function () {

        new DataTable('#PreSalesTable', {
            language: {
                emptyTable: "No Models found"
            },
            layout: {
                topStart: {
                    buttons: ['copyHtml5', 'excelHtml5', 'csvHtml5', 'pdfHtml5']
                }
            }
        });


    });
</script>

