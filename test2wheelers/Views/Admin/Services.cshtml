@model List<_2whealers.Models.Services>
@{
    ViewBag.Title = "Services";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}



<ol class="breadcrumb mb-0">
    <li class="breadcrumb-item">
        <a href="/"><i class="fas fa-home"></i> Home</a>
    </li>
    <li class="breadcrumb-item active"> Services </li>
</ol>

<div class="row gx-4">
    <div class="col-12">
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h2 class="mb-4"><i class="fas fa-receipt"></i> Services</h2>

                <div class="mb-3 text-right">
                    <a href="@Url.Action("AddServices", "Admin")" class="btn btn-success">
                        + Add Services
                    </a>
                </div>

                <div class="table-responsive">
                    <table id="ReceiptsTable" class="table table-striped table-hover table-bordered align-middle shadow-sm rounded overflow-hidden">
                        <thead style="background: linear-gradient(90deg, #6c63ff, #4facfe); color: #fff;">
                            <tr>
                                <th style="width:60px;" class="text-center">SNo.</th>
                                <th>Customer Name</th>
                                <th>Mobile Number</th>
                                <th>Amount</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int rowNumber = 1;
                            }
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@rowNumber</td>
                                        @* <td>@item.CustomerName</td> *@
                                        <td>@item.MobileNo</td>
                                        <td>@item.Amount</td>
                                        @* <td>@item.ReceiptDate.Value.ToString("dd-MM-yyyy")</td> *@
                                        <td>
                                            @if (item.IsActive == true)
                                            {
                                                <span class="badge rounded-pill bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge rounded-pill bg-secondary">Inactive</span>
                                            }
                                        </td>
                                        <td>
                                            <a href="@Url.Action("ReceiptsDetails", "Admin", new { id = item.Id })"
                                               class="btn btn-sm btn-primary">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    rowNumber++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="text-center text-muted py-4">
                                        🚫 No Receipts found
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <style>
                    /* Gradient button */
                    .btn-gradient {
                        background: linear-gradient(45deg, #6c63ff, #4facfe);
                        color: #fff;
                        border: none;
                    }

                        .btn-gradient:hover {
                            background: linear-gradient(45deg, #4facfe, #6c63ff);
                            color: #fff;
                        }

                    /* Table striping */
                    .table-striped tbody tr:nth-of-type(odd) {
                        background-color: #f9f9ff;
                    }

                    /* Hover effect */
                    .table-hover tbody tr:hover {
                        background-color: #eef2ff;
                        transition: 0.3s;
                    }
                </style>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            toastr.options = {
                "positionClass": "toast-bottom-right"
            }
        @if (TempData["Success"] != null)
        {
            <text>toastr.success("@TempData["Success"]");</text>
        }
        @if (TempData["Error"] != null)
        {
            <text>toastr.error("@TempData["Error"]");</text>
        }
        });
    </script>
}
<script>
    $(document).ready(function () {
        new DataTable('#ReceiptsTable', {
            language: {
                emptyTable: "No Receipts found"
            },
            layout: {
                topStart: {
                    buttons: ['copyHtml5', 'excelHtml5', 'csvHtml5', 'pdfHtml5']
                }
            }
        });
    });
</script>
