@model List<_2whealers.Models.PurchaseViewModel>
@{
    ViewBag.Title = "PreSales";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}
<ol class="breadcrumb mb-0">
    <li class="breadcrumb-item">
        <a href="/"><i class="fas fa-home"></i> Home</a>
    </li>
    <li class="breadcrumb-item active">
        Pre-Sale </li>
</ol>


<div class="row gx-4">
    <div class="col-12">
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h2 class="mb-4">
                    <i class="nav-icon fas fa-clipboard-list"></i>Pre - Sales
                </h2>

                <div class="mb-3 text-right">
                    <a href="@Url.Action("AddPreSale", "Admin")" class="btn btn-success">
                        + Add Pre Sales
                    </a>
                </div>



                <div class="table-responsive">
                    <table id="PreSalesTable" class="table table-striped table-hover table-bordered align-middle shadow-sm rounded overflow-hidden">

                        <thead style="background: linear-gradient(90deg, #6c63ff, #4facfe); color: #fff;">
                            <tr>
                                <th style="width:60px;" class="text-center">SNo.</th>
                                <th>Name</th>
                                <th>Mobile Number</th>
                                <th>Model Name</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int rowNumber = 1;
                            }
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@rowNumber</td>
                                        <td>@item.Name</td>
                                        <td>@item.MobileNo</td>
                                        <td>@item.ModelName</td>
                                        <td>@item.CashAmount</td>
                                        <td>
                                            @if (item.IsActive == true)
                                            {
                                                <span class="badge rounded-pill bg-danger">Puchased</span>
                                            }
                                            else
                                            {
                                                <span class="badge rounded-pill bg-success">Sale</span>
                                            }

                                        </td>
                                        <td>
                                            <a href="@Url.Action("PreSaleDetails", "Admin", new { id = item.Id })" class="btn btn-sm btn-primary">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    rowNumber++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center text-muted py-4">
                                        🚫 No Records found
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>

                </div>
                <style>
                    /* Gradient button */
                    .btn-gradient {
                        background: linear-gradient(45deg, #6c63ff, #4facfe);
                        color: #fff;
                        border: none;
                    }

                        .btn-gradient:hover {
                            background: linear-gradient(45deg, #4facfe, #6c63ff);
                            color: #fff;
                        }

                    /* Table striping */
                    .table-striped tbody tr:nth-of-type(odd) {
                        background-color: #f9f9ff;
                    }

                    /* Hover effect */
                    .table-hover tbody tr:hover {
                        background-color: #eef2ff;
                        transition: 0.3s;
                    }
                </style>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
            $(function () {
                toastr.options = {
                    "positionClass": "toast-bottom-right"
                }
        @if (TempData["Success"] != null)
        {
            <text>toastr.success("@TempData["Success"]");</text>
        }

        @if (TempData["Error"] != null)
        {
            <text>toastr.error("@TempData["Error"]");</text>
        }

            });

        $(document).ready(function () {
            new DataTable('#PreSalesTable', {
                language: {
                    emptyTable: "No Models found"
                },
                layout: {
                    topStart: {
                        buttons: ['copyHtml5', 'excelHtml5', 'csvHtml5', 'pdfHtml5']
                    }
                }
            });
        });
    </script>
}

