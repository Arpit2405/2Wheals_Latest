                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a href="@Url.Action("Receipts","Admin")" class="nav-link @(currentAction=="Receipts" ? "active" : "")">
                                    <i class="fas fa-receipt"></i><p>Receipts</p>
                                </a>
                            </li>
                        </ul>
                    </li>

                    <li class="nav-item @(currentAction=="Receipts" ? "menu-open" : "")">
                        <a href="#" class="nav-link @(currentAction=="AddStock" ? "active" : "")">
                            <i class="fas fa-receipt"></i>
                            <p>Manage Stocks<i class="right fas fa-angle-left"></i></p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a href="@Url.Action("AddStock","Stock")" class="nav-link @(currentAction=="AddStock" ? "active" : "")">
                                    <i class="fas fa-receipt"></i><p>Manage Stocks</p>
                                </a>
                            </li>
                        </ul>
                    </li>

                    <!-- Download -->
                    <li class="nav-item">
                        <a href="@Url.Action("DownloadSales","Admin")" class="nav-link @(currentAction=="DownloadSales" ? "active" : "")">
                            <i class="nav-icon fas fa-file-download"></i><p>Download Transactions</p>
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>

        <div class="content-wrapper">
            @RenderBody()
        </div>
        <footer class="main-footer">
            <strong> Copyright &copy; 2025-@DateTime.Now.Year  <a href="https://Check">2Wheals.com</a>.</strong>
            All rights reserved.
            <div class="float-right d-none d-sm-inline-block">
                <b>Version</b> 3.2.0
