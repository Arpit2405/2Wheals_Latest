    <div class="wrapper">

        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>

                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/" class="nav-link">BIKE NATION</a>
                </li>
            </ul>

            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="#" id="darkModeToggle" title="Toggle Theme">
                        <i class="fas fa-moon" id="themeIcon"></i>
                    </a>
                </li>
                <li class="nav-item dropdown user-menu">
                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
                        <img src="~/adminassets/dist/img/user2-160x160.jpg"
                             class="user-image img-circle elevation-2"
                             alt="User Image">
                    </a>
                    <ul class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        <!-- User image -->
                        <li class="user-header bg-primary">
                            <img src="~/adminassets/dist/img/user2-160x160.jpg"
                                 class="img-circle elevation-2"
                                 alt="User Image">
                            <p>
                                Alexander Pierce - Admin
                                <small>Member since Jan. 2024</small>
                            </p>
                        </li>
                        <!-- Menu Footer-->
                        <li class="user-footer">
                            <a href="@Url.Action("Profile","Account")" class="btn btn-default btn-flat">Profile</a>
                            <a href="@Url.Action("Logout","Login")" class="btn btn-default btn-flat float-right">Logout</a>
                        </li>
                    </ul>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="/" class="brand-link">
                <img src="~/adminassets/dist/img/logo1.png" alt="Bike Nation" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">Bike Nation</span>
            </a>

            <!-- Sidebar Menu -->
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview">

                    <!-- Dashboard -->
                    <li class="nav-item">
                        <a href="@Url.Action("Dashboard","Admin")" class="nav-link @(currentAction=="Dashboard" ? "active" : "")">
                            <i class="nav-icon fas fa-tachometer-alt"></i><p>Dashboard</p>
                        </a>
                    </li>

                    <!-- Brands -->
                    <li class="nav-item @(currentAction=="Brands" || currentAction=="Models" ? "menu-open" : "")">
                        <a href="#" class="nav-link @(currentAction=="Brands" || currentAction=="Models" ? "active" : "")">
                            <i class="nav-icon fas fa-tags"></i>
                            <p>Brands<i class="right fas fa-angle-left"></i></p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a href="@Url.Action("Brands","Admin")" class="nav-link @(currentAction=="Brands" ? "active" : "")">
                                    <i class="fas fa-plus-circle nav-icon"></i><p>Add Brands</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("Models","Admin")" class="nav-link @(currentAction=="Models" ? "active" : "")">
                                    <i class="fas fa-motorcycle nav-icon"></i><p>Add Model</p>
                                </a>
                            </li>
                        </ul>
                    </li>

                    <!-- Exchange -->
                    <li class="nav-item @(currentAction=="PreSales" ? "menu-open" : "")">
                        <a href="#" class="nav-link @(currentAction=="PreSales" ? "active" : "")">
                            <i class="nav-icon fas fa-exchange-alt"></i>
                            <p>Exchange<i class="right fas fa-angle-left"></i></p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a href="@Url.Action("PreSales","Admin")" class="nav-link @(currentAction=="PreSales" ? "active" : "")">
                                    <i class="fas fa-clipboard-list nav-icon"></i><p>Pre Sales</p>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <!-- Insurance (external link, no active state) -->
                    <li class="nav-item">
                        <a href="https://pos.coverfox.com/two-wheeler-insurance/" class="nav-link">
                            <i class="nav-icon fas fa-shield-alt"></i>
                            <p>Insurance <span class="badge badge-danger right">New</span></p>
                        </a>
                    </li>

                    <!-- Sales -->
                    <li class="nav-item @(currentAction=="Sales" ? "menu-open" : "")">
                        <a href="#" class="nav-link @(currentAction=="Sales" ? "active" : "")">
                            <i class="nav-icon fas fa-store"></i>
                            <p>Sales<i class="right fas fa-angle-left"></i></p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a href="@Url.Action("Sales","Admin")" class="nav-link @(currentAction=="Sales" ? "active" : "")">
                                    <i class="fas fa-tags nav-icon"></i><p>Sales</p>
                                </a>
                            </li>
                        </ul>
                    </li>

                    <li class="nav-item @(currentAction=="Receipts" ? "menu-open" : "")">
                        <a href="#" class="nav-link @(currentAction=="Receipts" ? "active" : "")">
                            <i class="fas fa-receipt"></i>
