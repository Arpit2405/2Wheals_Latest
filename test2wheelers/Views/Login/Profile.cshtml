@model test2wheelers.Models.UserModel
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

<style>
    .position-relative .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 95px;
        height: 95px;
        border-radius: 50%;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        justify-content: center;
        align-items: center;
        opacity: 0;
        transition: opacity 0.3s ease;
        z-index: 10; /* Ensure overlay is above image */
    }

    .position-relative:hover .overlay {
        opacity: 1;
    }
</style>


<ol class="breadcrumb mb-0">
    <li class="breadcrumb-item">
        <a href="/"><i class="fas fa-home"></i> Home</a>
    </li>
    <li class="breadcrumb-item active"> Profile </li>
</ol>


<div class="row">
    <div class="offset-1 col-10">
        <div class="card card-primary shadow-sm mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="card-title mb-0">Profile Settings</h3>
                </div>
            </div>
            <div class="card-body">

                <!-- Account Section -->
                <h5 class="mb-3">Account</h5>
                <hr />
                <!-- Profile Picture -->
                <div>
                    @* <div class="d-flex align-items-center">
                        <img src="@Model.ProfileImage" class="rounded-circle me-3" alt="Profile" width="95" height="95">
                        <div>
                            <h5 class="mb-1">@Model.UserName</h5>
                            <span class="badge bg-primary">@Model.RoleName</span>
                        </div>
                    </div> *@

                    <div class="d-flex align-items-center">
                        <!-- Profile picture with hover upload -->
                        <div class="position-relative d-inline-block" style="width:95px; height:95px;">
                            <img src="/Uploads/Photos/@Model.ProfileImage" class="rounded-circle"
                                 alt="Profile" width="95" height="95">

                            <!-- Overlay -->
                            <div class="overlay d-flex justify-content-center align-items-center">
                                <label for="profileImageInput" class="text-white" style="cursor:pointer;">
                                    <i class="fa fa-camera" style="font-size:24px;"></i>
                                </label>
                                <form id="profileUploadForm" asp-action="UploadPhoto" asp-controller="Login"
                                      method="post" enctype="multipart/form-data">
                                    <input type="file" id="profileImageInput" accept="jpg,png" name="photoFile" class="d-none" />
                                </form>
                            </div>
                        </div>

                        <!-- User info -->
                        <div class="ms-3 ml-3">
                            <h5 class="mb-1">@Model.UserName</h5>
                            <span class="badge bg-primary">@Model.RoleName</span>
                        </div>
                    </div>


                </div>

                <hr />

                <form method="post">
                    <!-- Full Name -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">First name</label>
                            <input type="text" asp-for="FirstName" class="form-control">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Last name</label>
                            <input type="text" asp-for="LastName" class="form-control">
                        </div>
                    </div>

                    <!-- Contact Email -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Contact email</label>
                            <input type="email" asp-for="Email" class="form-control">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Mobile No.</label>
                            <input type="text" asp-for="PhoneNumber" class="form-control">
                        </div>
                    </div>

                    <hr />
                    <!-- Password -->
                    <h6 class="mt-4">Password</h6>
                    <p class="text-muted small mb-1">Enter new password to update.</p>
                    <div class="row mb-4">
                        <div class="col-md-6 mb-2">
                            <label class="form-label">New password</label>
                            <input type="password" asp-for="Password" class="form-control" >
                        </div>
                        <div class="col-md-6 mb-2">
                            <label class="form-label">Confirm new password</label>
                            <input type="password" asp-for="ConfirmPassword" class="form-control" >
                        </div>
                    </div>
                    <div class="card-footer text-right">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Update</button>
                    </div>
                </form>

            </div>



        </div>
    </div>
</div>





@section Scripts {

    <script>

        document.getElementById("profileImageInput").addEventListener("change", function () {
            document.getElementById("profileUploadForm").submit();
        });

        $(function () {
            toastr.options = { "positionClass": "toast-top-right" };

            @if (TempData["Success"] != null)
            {
                                            <text>toastr.success("@TempData["Success"]");</text>
            }

            @if (TempData["Error"] != null)
            {
                                            <text>toastr.error("@TempData["Error"]");</text>
            }
        });



    </script>
}
