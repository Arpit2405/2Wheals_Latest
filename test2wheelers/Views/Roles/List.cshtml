@model IEnumerable<RoleModel>
@using _2whealers.Helpers

@{
    ViewBag.Title = "Roles";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

<ol class="breadcrumb mb-0">
    <li class="breadcrumb-item">
        <a href="/"><i class="fas fa-home"></i> Home</a>
    </li>
    <li class="breadcrumb-item active"> Roles </li>
</ol>

<div class="row">
    <div class="col-12">
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h2 class="mb-4"><i class="nav-icon fas fa-user-lock"></i> Roles</h2>

                <!-- Add Role Button -->
                @if (User.HasPermissionForUrl("/Roles/List", "Edit"))
                {
                    <div class="mb-3 text-right">
                        <a asp-action="Manage" class="btn btn-success btn-sm px-3"><i class="fa fa-plus"></i> Add Role</a>
                    </div>

                }


                <div class="table-responsive">
                    <table id="rolesTable" class="table table-striped table-hover table-bordered align-middle shadow-sm rounded overflow-hidden">
                        <thead style="background: linear-gradient(90deg, #6c63ff, #4facfe); color: #fff;">
                            <tr>
                                <th style="width:60px;" class="text-center">#</th>
                                <th>Brand Name</th>
                                <th>Active</th>
                                <th style="width:160px;" class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int row = 1;
                            }
                            @if (Model != null && Model.Any())
                            {
                                @foreach (var role in Model)
                                {
                                    <tr>
                                        <td class="text-center fw-bold">@row</td>
                                        <td>@role.RoleName</td>
                                        <td>
                                            @if (@role.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Inactive</span>
                                            }
                                        </td>
                                        <td class="text-end">
                                            @if (User.HasPermissionForUrl("/Roles/List", "Edit"))
                                            {
                                                <a asp-action="Manage" asp-route-id="@role.RoleId" class="btn btn-sm btn-gradient me-1"> <i class="fa fa-edit"></i> Edit</a>
                                            }
                                            @if (User.HasPermissionForUrl("/Roles/List", "Delete"))
                                            {
                                                <form asp-action="Delete" asp-route-id="@role.RoleId" method="post" class="delete-form" style="display:inline;">
                                                    <button type="submit" class="btn btn-sm btn-danger "><i class="fa fa-trash"></i> Delete</button>
                                                </form>
                                            }
                                        </td>
                                    </tr>
                                    row++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center text-muted py-4">
                                        🚫 No Brands found
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <style>
                    /* Gradient button */
                    .btn-gradient {
                        background: linear-gradient(45deg, #6c63ff, #4facfe);
                        color: #fff;
                        border: none;
                    }

                        .btn-gradient:hover {
                            background: linear-gradient(45deg, #4facfe, #6c63ff);
                            color: #fff;
                        }

                    /* Table striping */
                    .table-striped tbody tr:nth-of-type(odd) {
                        background-color: #f9f9ff;
                    }

                    /* Hover effect */
                    .table-hover tbody tr:hover {
                        background-color: #eef2ff;
                        transition: 0.3s;
                    }
                </style>
            </div>
        </div>
    </div>
</div>

<style>
    #rolesTable thead tr th{
        color: white;
    }

</style>

@section Scripts {
    <script>
        $(function () {
            toastr.options = { "positionClass": "toast-top-right" };

            @if (TempData["Success"] != null)
            {
                        <text>toastr.success("@TempData["Success"]");</text>
            }

            @if (TempData["Error"] != null)
            {
                        <text>toastr.error("@TempData["Error"]");</text>
            }
        });
    </script>
    <script>
        $(document).ready(function () {

            $('#rolesTable').DataTable({
                responsive: true,
                lengthChange: true,
                autoWidth: false,
                buttons: ["copy", "csv", "excel", "pdf"]
            }).buttons().container().appendTo('#rolesTable_wrapper .col-md-6:eq(0)');


            $(document).on("submit", ".delete-form", function (e) {
                e.preventDefault(); // stop normal form submit

                let form = this; // reference to the form

                Swal.fire({
                    title: "Are you sure?",
                    text: "This will delete the role permanently and all its permissions.",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#d33",
                    cancelButtonColor: "#3085d6",
                    confirmButtonText: "Yes, delete it!",
                    cancelButtonText: "Cancel"
                }).then((result) => {
                    if (result.isConfirmed) {
                        form.submit(); // ✅ manually submit after confirmation
                    }
                });
            });
        });
    </script>
}